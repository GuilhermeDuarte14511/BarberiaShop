@model IEnumerable<BarberShop.Domain.Entities.Barbeiro>

@{
    ViewData["Title"] = "Escolher Barbeiro";
}

<!-- Div com ID para identificação -->
<div id="escolherBarbeiroPage" class="container mt-5"
     data-servico-ids="@ViewData["ServicoIds"]">
    <!-- Adicionado data-servico-ids -->
    <h2 class="text-danger text-center">Escolha o Barbeiro</h2>
    <div class="row">
        @foreach (var barbeiro in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 bg-dark text-light">
                    <div class="card-body text-center">
                        <h5 class="card-title text-warning">@barbeiro.Nome</h5>
                        <button class="btn btn-danger barbeiro-btn"
                                data-barbeiro-id="@barbeiro.BarbeiroId"
                                data-duracao-total="@ViewData["DuracaoTotal"]"
                                data-servico-ids="@ViewData["ServicoIds"]">
                            <!-- Incluído data-servico-ids -->
                            Escolher Horário
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="calendarioModal" tabindex="-1" aria-labelledby="calendarioModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content bg-dark text-light">
            <div class="modal-header">
                <h5 class="modal-title text-danger" id="calendarioModalLabel">Escolha o Horário</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="dropdownHorarios">
                    <!-- Dropdown renderizado aqui -->
                    <label for="horariosDisponiveis">Selecione um horário:</label>
                    <select id="horariosDisponiveis" class="form-select bg-dark text-light border-secondary">
                        <option value="">Escolha um horário...</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="confirmarHorarioBtn">Confirmar Horário</button>
            </div>
        </div>
    </div>
</div>

<!-- Spinner de carregamento (inicialmente oculto) -->
<div id="loadingSpinner" class="text-center mt-3" style="display:none;">
    <div class="spinner-border text-danger" role="status">
        <span class="sr-only">Carregando...</span>
    </div>
    <p class="mt-2 text-light">Carregando...</p>
</div>
