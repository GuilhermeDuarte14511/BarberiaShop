@model IEnumerable<BarberShop.Domain.Entities.Barbeiro>

@{
    ViewData["Title"] = "Escolher Barbeiro";
}

<!-- Div com ID para identificação -->
<div id="escolherBarbeiroPage" class="container mt-5">
    <h2>Escolha o Barbeiro</h2>
    <div class="row">
        @foreach (var barbeiro in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <h5 class="card-title">@barbeiro.Nome</h5>
                        <button class="btn btn-primary barbeiro-btn"
                                data-barbeiro-id="@barbeiro.BarbeiroId">
                            Escolher Horário
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="calendarioModal" tabindex="-1" aria-labelledby="calendarioModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="calendarioModalLabel">Escolha o Horário</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="calendario"></div> <!-- Calendário renderizado aqui -->
            </div>
        </div>
    </div>
</div>

<!-- Spinner de carregamento (inicialmente oculto) -->
<div id="loadingSpinner" class="text-center mt-3" style="display:none;">
    <div class="spinner-border text-danger" role="status">
        <span class="sr-only">Carregando...</span>
    </div>
    <p class="mt-2">Carregando...</p>
</div>
